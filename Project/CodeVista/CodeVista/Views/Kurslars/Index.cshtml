@model IEnumerable<CodeVista.Models.Kurslar>
@Scripts.Render("~/Layout/jquery")
@Styles.Render("~/Layout/css")
<div class="container">
    <div class="row">
        @foreach (var kurs in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="~/images/@kurs.Diller.resim" alt="Resim Yok" style="max-width: 100%; max-height: 100%; width: 350px; height: 300px;">
                    <div class="card-body">
                        <h5 class="card-title">@kurs.KursAdi</h5>
                        <p class="card-text">@kurs.KursAciklama</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                            </div>
                            <small class="text-muted">@kurs.KursSeviyesi Seviye</small>
                            <p class="card-text">@kurs.Diller.DilAdi</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

