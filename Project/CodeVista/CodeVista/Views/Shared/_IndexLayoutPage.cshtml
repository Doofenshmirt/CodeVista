<body>
    <div class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/images/CodeVista.jpg"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <!--   ViewContext.RouteData.Values["Controller"].ToString() ile mevcut sayfanın kontrolcüsü alınır ve kontrolcü ismi belirli bir sayfa ile eşleşip eşleşmediği
                        kontrol edilir. Eğer eşleşiyorsa, active sınıfı eklenir ve bağlantı aktif hale gelir. Bu sayede, her sayfada doğru bağlantının aktif olduğunu sağlarız.-->
                        <!-- Ana Sayfa bağlantısı -->
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Ana Sayfa</a>
                        </li>
                        <!-- Yazılım Dilleri bağlantısı -->
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Dillers" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Dillers")">Yazılım Dilleri</a>
                        </li>
                        <!-- Yazılım Sektörleri bağlantısı -->
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Sektorlers" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Sektorlers")">Yazılım Sektörleri</a>
                        </li>
                        <!-- Kaynaklar bağlantısı -->
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Kaynaklars" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Kaynaklars")">Kaynaklar</a>
                        </li>
                        <!-- Kurslar bağlantısı -->
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Kurslars" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Kurslars")">Kurslar</a>
                        </li>
                    </ul>
                    <!-- Giriş ve Arama formu -->
                    <form class="form-inline my-2 my-lg-0">
                        <div class="login_bt">
                            <ul>
                                <li><a href="#"><span class="user_icon"><i class="fa fa-user" aria-hidden="true"></i></span>Giriş</a></li>
                                <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <!-- news section end -->
